# Docker Environment Configuration
# Copy this file to .env.docker and customize as needed

# Application Settings
APP_NAME="Modulo CMS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8080

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/database/database.sqlite

# For MySQL/PostgreSQL, uncomment and configure:
# DB_CONNECTION=mysql
# DB_HOST=db
# DB_PORT=3306
# DB_DATABASE=modulo
# DB_USERNAME=root
# DB_PASSWORD=secret

# Cache & Session
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Mail Configuration (optional)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Theme Configuration
# Available themes: modern-react, flexia (or any custom theme)
DEFAULT_THEME=modern-react

# Seeding Options
SEED_EXAMPLE_CONTENT=true
