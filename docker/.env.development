# Development environment for Modulo CMS (used by Podman/Docker compose)

APP_NAME="Modulo CMS"
APP_ENV=local
APP_KEY=base64:OaXh2/4ZTUU63imrn38J9sYc2VOSqKN1Ft1I3jW7fPI=
APP_DEBUG=true
APP_URL=http://localhost:8080

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database (SQLite)
DB_CONNECTION=sqlite
# Ensure database/database.sqlite exists (the script will create it if missing)

# Vite dev server URL (used by laravel-vite-plugin for HMR)
# IMPORTANT: This must be reachable by the browser, not just inside containers.
VITE_DEV_SERVER_URL=http://localhost:5173

# Sessions / Cache / Queue
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

# Redis (unused by default)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (unused by default)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_PORT=5173
